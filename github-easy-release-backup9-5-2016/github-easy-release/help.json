{
    "tasks": [
        {
            "name": "ger",
            "description": "Create a GitHub release",
            "usage": "gulp ger [-p][-b major|minor|patch|prerelease][-n number][-t string] ",
            "examples": [
                {
                    "title": "Create release, bump(increment) minor version and update GitHub pages:",
                    "code": "gulp ger -b minor -p"
                },
                {
                    "title": "Create pre-release, bump(increment) pre-release version:",
                    "code": "gulp ger -b prerelease"
                },
                {
                    "title": "Update GitHub pages (no release):",
                    "code": "gulp ger -p"
                },
                {
                    "title": "Create release, setting package version to 1.2.3 and tag the release v1.2.3:",
                    "code": "gulp ger -n 1.2.3 -t v1.2.3"
                }
            ],
            "options":
                    [
                        {
                            "option": "-b",
                            "help": "Create GitHub release. Bump the semantic version to the next increment",
                            "type": "[string]"
                        },
                        {
                            "option": "-p",
                            "help": "Update GitHub pages, overriding package.json setting",
                            "type": "[boolean]"

                        },
                        {
                            "option": "-n",
                            "help": "Create GitHub release. Set the version to the semver string  provided.",
                            "type": "[string]",
                            "notes": "If -t is not provided, the tag is created with the same string passed to -n"

                        },
                        {
                            "option": "-t",
                            "help": "Set the release tag to string provided.",
                            "type": "[string]",
                            "notes": "If used with the -b option, -t tag overrides the tag normally created for a -b release."

                        }

                    ]

        },
        {
            "name": "ger-version",
            "description": "Shows GER version",
            "usage": "gulp ger-version",
            "examples":
                    [

                    ],
            "options":
                    [

                    ]

        },
        {
            "name": "ger-config",
            "description": "Updates GER Package Configuration",
            "usage": "gulp ger-config [options]",
            "examples":
                    [
                        {
                            "title": "Configure token:",
                            "code": "gulp ger -c token=1ase432354fsdd432g456"
                        },
                        {
                            "title": "Configure default ghpages setting",
                            "code": "gulp ger -c ghpages=true"
                        }

                    ],
            "options":
                    [
                        {
                            "option": "-c key=value",
                            "help": "key/value pair to be updated",
                            "type": "[string]"
                        }
                    ]

        },
        {
            "name": "ger-list",
            "description": "List release or all releases",
            "usage": "gulp ger-list [-t string] [-a]",
            "examples":
                    [
                        {
                            "title": "List all releases",
                            "code": "ger-list"
                        },
                        {
                            "title": "List release for tag v1.2.3",
                            "code": "ger-list -t v1.2.3"
                        },
                        {
                            "title": "List all properties for tag v1.2.3",
                            "code": "ger-list -t v1.2.3 -a"
                        }

                    ],
            "options":
                    [
                        {
                            "option": "-t",
                            "help": "release tag",
                            "type": "[string]"
                        },
                        {
                            "option": "-a",
                            "help": "list all properties",
                            "type": "[boolean]"
                        }
                    ]

        },
        {
            "name": "ger-delete",
            "description": "Delete a single release",
            "usage": "gulp ger-delete [-t tag]",
            "examples":
                    [
                        {
                            "title": "Delete release for tag 1.2.3",
                            "code": "ger-delete -t 1.2.3"
                        }

                    ],
            "options":
